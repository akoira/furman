                <textFieldExpression>
                    <![CDATA[(by.dak.report.jasper.ReportUtils.getPriceBy($F{PRICE_PRICE_SALE},$F{PRICE_CURRENCY_TYPE}))]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="Detail" x="36" y="5" width="428" height="10"/>
                <textElement>
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{FURNITURE_TYPE_NAME}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    <columnFooter>
        <band height="5" splitType="Stretch"/>
    </columnFooter>
    <pageFooter>
